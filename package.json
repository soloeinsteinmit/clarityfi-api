{
  "name": "clarityfi-api",
  "version": "1.0.0",
  "description": "Goal: Build a robust, secure, and well-tested backend. This is the most important phase for your fundamental skills.",
  "nodemonConfig": {
    "watch": [
      "src/"
    ],
    "ext": "ts",
    "ignore": [
      "*.test.ts"
    ],
    "delay": "3",
    "execMap": {
      "ts": "ts-node"
    }
  },
  "main": "dist/server.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "start": "tsc && nodemon dist/server.js",
    "dev": "tsc && nodemon src/server.ts",
    "lint": "eslint . --ext .ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/soloeinsteinmit/clarityfi-api.git"
  },
  "keywords": [
    "clarityfi-api",
    "clarity finance"
  ],
  "author": "Solomon Eshun",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/soloeinsteinmit/clarityfi-api/issues"
  },
  "homepage": "https://github.com/soloeinsteinmit/clarityfi-api#readme",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/express": "^5.0.3",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.13.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "bcryptjs": "^3.0.2",
    "express": "^5.1.0",
    "ts-node": "^10.9.2",
    "zod": "^4.0.14"
  }
}
